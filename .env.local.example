# Sanity Configuration (Required)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_VERSION=2025-01-01

# Sanity Tokens
# Use least privilege in production. If you only have one token, you can set it to both.
# - SANITY_READ_TOKEN: enables reading drafts (preview)
# - SANITY_WRITE_TOKEN: enables scripts/admin routes to create/update/delete content
SANITY_READ_TOKEN=
SANITY_WRITE_TOKEN=

# Preview mode secret used by /api/preview route
SANITY_PREVIEW_SECRET=

# Site Configuration (Recommended for Production)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Service - Resend (Optional)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
CONTACT_EMAIL=contact@your-company.com
FROM_EMAIL=noreply@your-company.com

# hCaptcha Bot Protection (Optional)
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
HCAPTCHA_SECRET=0xXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Studio Authentication (Optional - for production)
STUDIO_USERNAME=admin
STUDIO_PASSWORD=your-secure-password-here

# Rate Limiting (Optional)
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Payload CMS (if using Payload locally)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/<db>?appName=<app>
PAYLOAD_SECRET=replace-with-a-strong-secret

# Payload Preview Secret (for draft preview mode)
# Generate with: openssl rand -base64 32
PAYLOAD_PREVIEW_SECRET=replace-with-a-strong-random-secret

# CMS timeout (optional)
# Maximum time (ms) to wait for CMS operations before erroring
CMS_TIMEOUT_MS=4000
